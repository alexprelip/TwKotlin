<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:foreground="@drawable/ripple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/place_image"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <RelativeLayout
            style="@style/place_item_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/place_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Best place in the world"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/place_rating_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/place_name"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="3.4"
                android:textColor="#8a9a5b"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/place_rating_bar"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/place_name"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/place_rating_number"
                android:progressTint="#8a9a5b" />

            <TextView
                android:id="@+id/place_review_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/place_name"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/place_rating_bar"
                android:text="33 reviews"
                android:textColor="#999999" />

            <TextView
                android:id="@+id/place_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/place_rating_number"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="address ddf fgfj "
                android:textColor="#999999" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#CCCCCC" />

        <RelativeLayout
            style="@style/place_item_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/place_highlight_title_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/place_highlight_price_0"
                android:text="qefgwegeg"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/place_highlight_price_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:text="sdgdfh"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/place_highlight_duration_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/place_highlight_title_0"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/place_highlight_price_0"
                android:text="infinity"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/place_highlight_extra_info_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/place_highlight_price_0"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:text="extra"
                android:textAlignment="textEnd" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/place_item_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/place_highlight_title_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/place_highlight_price_1"
                android:text="qefgwegeg"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/place_highlight_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:text="sdgdfh"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/place_highlight_duration_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/place_highlight_title_1"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/place_highlight_price_1"
                android:text="infinity"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/place_highlight_extra_info_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/place_highlight_price_1"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:text="extra"
                android:textAlignment="textEnd" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/place_item_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/place_highlight_title_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/place_highlight_price_2"
                android:text="qefgwegeg"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/place_highlight_price_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:text="sdgdfh"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/place_highlight_duration_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/place_highlight_title_2"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/place_highlight_price_2"
                android:text="infinity"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/place_highlight_extra_info_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/place_highlight_price_2"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:text="extra"
                android:textAlignment="textEnd" />
        </RelativeLayout>

        <TextView
            style="@style/place_item_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show all services..."
            android:layout_marginBottom="10dp"
            android:textColor="#FF0000" />
    </LinearLayout>
</androidx.cardview.widget.CardView>